<Window x:Class="WpfDataGridFilter.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDataGridFilter.Example" xmlns:wpfdatagridfilter="clr-namespace:WpfDataGridFilter;assembly=WpfDataGridFilter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn>
                    <DataGridTextColumn.Header>
                        <wpfdatagridfilter:FilterableDataGridColumnHeader HeaderText="Abc" PropertyName="ABC" Height="30" FilterType="BooleanFilter"></wpfdatagridfilter:FilterableDataGridColumnHeader>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn>
                    <DataGridTextColumn.Header>
                        <wpfdatagridfilter:FilterableDataGridColumnHeader HeaderText="DEf" PropertyName="DEF" Height="30" FilterType="DateFilter"></wpfdatagridfilter:FilterableDataGridColumnHeader>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
