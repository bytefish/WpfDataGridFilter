<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WpfDataGridFilter.Example.Controls">
    <!-- PAGINATOR -->
    <Style TargetType="controls:PaginationControl">
        <Setter Property="Margin" Value="10,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:PaginationControl">
                    <StackPanel Orientation="Horizontal">

                        <Button Name="PART_FirstPage" Content="&#xE892;" FontFamily="Segoe MDL2 Assets" />
                        <Button Name="PART_PreviousPage" Content="&#xE72B;" FontFamily="Segoe MDL2 Assets" />

                        <ComboBox Name="PART_PageSizeSelector"
                                  BorderThickness="0"
                                  Width="80"
                                  Background="Black"
                                  SelectedIndex="0"
                                  VerticalAlignment="Stretch"/>
                        
                        <Button Name="PART_NextPage" Content="&#xE72A;" FontFamily="Segoe MDL2 Assets" />
                        <Button Name="PART_LastPage" Content="&#xE893;" FontFamily="Segoe MDL2 Assets" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>