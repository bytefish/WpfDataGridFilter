<UserControl x:Class="WpfDataGridFilter.Controls.DoubleNumericFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Grid.Column="0" Style="{DynamicResource FilterLabelStyle}">Filter Operator:</TextBlock>
        <ComboBox Grid.Row="0" Grid.Column="1" 
                  Style="{DynamicResource FilterComboBoxStyle}"
                  DisplayMemberPath="Translation" 
                  SelectedValuePath="Value"
                  ItemsSource="{Binding ViewModel.FilterOperators, Mode=TwoWay}"
                  SelectedValue="{Binding ViewModel.SelectedFilterOperator, Mode=TwoWay}" />

        <TextBlock Grid.Row="1" Grid.Column="0" Style="{DynamicResource FilterLabelStyle}">Lower Value:</TextBlock>
        <TextBox 
            Grid.Row="1" 
            Grid.Column="1"
            Style="{DynamicResource FilterTextBoxStyle}"
            Text="{Binding ViewModel.LowerValue}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Style="{DynamicResource FilterLabelStyle}">Upper Value:</TextBlock>
        <TextBox 
            Grid.Row="2" 
            Grid.Column="1"
            Style="{DynamicResource FilterTextBoxStyle}"
            Text="{Binding ViewModel.UpperValue}"/>

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonReset" 
                    Style="{DynamicResource FilterButtonStyle}" 
                    Click="ButtonReset_Click"
                    Content="{Binding ViewModel.Translations.ResetButton}"></Button>
            <Button x:Name="ButtonApply" 
                    Style="{DynamicResource FilterButtonStyle}" 
                    IsEnabled="{Binding ViewModel.IsApplyButtonEnabled}" 
                    Click="ButtonApply_Click" 
                    Content="{Binding ViewModel.Translations.ApplyButton}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
