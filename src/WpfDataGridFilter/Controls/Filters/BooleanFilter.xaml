<UserControl x:Class="WpfDataGridFilter.Controls.BooleanFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Style="{DynamicResource FilterLabelStyle}">Filter Operator:</TextBlock>
        
        <ComboBox Grid.Row="0" Grid.Column="1"  
                  Style="{DynamicResource FilterComboBoxStyle}"
                  DisplayMemberPath="Translation" 
                  SelectedValuePath="Value"
                  ItemsSource="{Binding ViewModel.FilterOperators, Mode=TwoWay}"
                  SelectedValue="{Binding ViewModel.SelectedFilterOperator, Mode=TwoWay}" />

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonReset" 
                    Style="{DynamicResource FilterButtonStyle}" 
                    Click="ButtonReset_Click"
                    Content="{Binding ViewModel.Translations.ResetButton}"></Button>
            <Button x:Name="ButtonApply" 
                    Style="{DynamicResource FilterButtonStyle}" 
                    IsEnabled="{Binding ViewModel.IsApplyButtonEnabled}" 
                    Click="ButtonApply_Click" 
                    Content="{Binding ViewModel.Translations.ApplyButton}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
